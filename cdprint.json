{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "projectType": "openSource",
  "incremental": true,
  "lineWidth": 160,
  "typescript": {
    "useBraces": "preferNone",
    "singleBodyPosition": "nextLine",
    "preferHanging": true,
    "nextControlFlowPosition": "nextLine",
    "arrowFunction.useParentheses": "preferNone",
    "tryStatement.nextControlFlowPosition": "sameLine"
  },
  "includes": ["**/*.{ts,tsx,js,jsx,json,md,css}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "public/vs",
    "shared/dist",
    "site/build",
    "site/src/resources",
    "CHANGELOG.md"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.40.2.wasm",
    "https://plugins.dprint.dev/json-0.8.0.wasm",
    "https://plugins.dprint.dev/markdown-0.5.1.wasm",
    "https://plugins.dprint.dev/prettier-0.2.0.exe-plugin@5fc84274198107b5464477803eea335ab3c978738ff40058294b105d2e32d5ae"
  ]
}
