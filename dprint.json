{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "lineWidth": 160,
  "typescript": {
    "useBraces": "preferNone",
    "singleBodyPosition": "nextLine",
    "preferHanging": true,
    "nextControlFlowPosition": "nextLine",
    "arrowFunction.useParentheses": "preferNone",
    "tryStatement.nextControlFlowPosition": "sameLine",
    "indentWidth": 2
  },
  "json": {
  },
  "markdown": {
  },
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "public/vs",
    "shared/dist",
    "site/build",
    "site/src/resources",
    "CHANGELOG.md"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.50.2.wasm",
    "https://plugins.dprint.dev/json-0.12.3.wasm",
    "https://plugins.dprint.dev/markdown-0.9.4.wasm"
  ]
}
